<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="12.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Import Project="$(MSBuildExtensionsPath)\$(MSBuildToolsVersion)\Microsoft.Common.props" Condition="Exists('$(MSBuildExtensionsPath)\$(MSBuildToolsVersion)\Microsoft.Common.props')" />
  <PropertyGroup>
    <ProjectGuid>{5BFF8047-2DCF-4CAC-A628-02A0FEDAE137}</ProjectGuid>
    <OutputType>Exe</OutputType>
    <RootNamespace>$(MsBuildProjectName)</RootNamespace>
    <AssemblyName>$(MsBuildProjectName)</AssemblyName>
    <SolutionDir Condition="$(SolutionDir) == '' Or $(SolutionDir) == '*Undefined*'">..\..\</SolutionDir>
    <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
  </PropertyGroup>

  <!-- Nuget package properties -->
  <PropertyGroup>
    <PackageId>$(MsBuildProjectName)</PackageId>
    <Authors>Andreas Gruenwald</Authors>
    <Description>$(MsBuildProjectName)</Description>    
  </PropertyGroup>
  
  <!-- Nuget depdendencies -->
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="$(PackageVersion-Microsoft-Extensions-Configuration)" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Ini" Version="$(PackageVersion-Microsoft-Extensions-Configuration)" />
    <PackageReference Include="NLog" Version="$(PackageVersion-NLog)" />
    <PackageReference Include="Nuget.CommandLine" Version="$(PackageVersion-Nuget-CommandLine)" />
    <PackageReference Include="Squirrel.Windows" Version="$(PackageVersion-Squirrel-Windows)" /> 
  </ItemGroup>

  <ItemGroup>
    <Reference Include="System" />
    <Reference Include="System.Core" />
    <Reference Include="System.Data" />
    <Reference Include="System.Xml" />
  </ItemGroup>
  <ItemGroup>
    <Compile Include="Program.cs" />
    <Compile Include="Properties\AssemblyInfo.cs" />
  </ItemGroup>
  <ItemGroup>
    <None Include="App.config" />
    <Content Include="NLog.config">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <SubType>Designer</SubType>
    </Content>
    <None Include="NLog.xsd">
      <SubType>Designer</SubType>
    </None>
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\ServerSync.Core\main\ServerSync.Core.csproj">
      <Project>{660ffcf6-e738-4bf3-9959-81efd54f1ee4}</Project>
      <Name>ServerSync.Core</Name>
    </ProjectReference>
    <ProjectReference Include="..\..\ServerSync.Model\main\ServerSync.Model.csproj">
      <Project>{374c13c6-aa45-4d65-9f0c-228ad35ebb25}</Project>
      <Name>ServerSync.Model</Name>
    </ProjectReference>
  </ItemGroup>
  <Import Project="$(MSBuildToolsPath)\Microsoft.CSharp.targets" />
  <Import Project="$(BuildToolsDirectory)Setup.targets" />

  <Target Name="DetermineSetupInputFiles">
    <ItemGroup>
      <SetupInputFiles Include="$(OutputPath)**\*.dll" />      
      <SetupInputFiles Remove="$(OutDir)JetBrains.Annotations.dll" />                
      <SetupInputFiles Include="$(OutDir)$(AssemblyName).exe" />          
      <SetupInputFiles Include="$(OutDir)$(AssemblyName).exe.config" />         
      <SetupInputFiles Include="$(OutDir)NLog.config" />         
    </ItemGroup>
  </Target>

</Project>